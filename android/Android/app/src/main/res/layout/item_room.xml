<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:elevation="10dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_room_cover"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_room_cover"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流月的房间"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_room_cover"
            android:layout_alignTop="@+id/iv_room_cover"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_room_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主持人："
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_room_cover"
            android:layout_alignBottom="@+id/iv_room_cover"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_host"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流月"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_host"
            android:layout_alignBottom="@+id/tv_host"
            android:id="@+id/tv_host_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前人数："
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_host"
            android:layout_alignBottom="@+id/tv_host"
            android:layout_marginLeft="100dp"
            android:id="@+id/tv_current"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="66"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_current"
            android:layout_alignBottom="@+id/tv_host"
            android:id="@+id/tv_current_number"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>